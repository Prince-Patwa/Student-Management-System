@model IEnumerable<StudentManagement.Models.batch>
@{
    ViewBag.Title = "Batch List";
    Layout = "_AdminLayout";
}

<div>
    <h1 class="text-3xl font-bold mb-4 text-center">
        <span class="border-b-4 border-blue-600">All Batch's List</span>
    </h1>
    <div class="row">
        <div class="col-sm-10 offset-sm-1">
            <table id="batchTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Batch ID</th>
                        <th>Batch Name</th>
                        <th>Teacher Name</th>
                        <th>Details</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            <td>@row.id</td>
                            <td>@row.name</td>
                            <td>@row.teacher</td>
                            <td>@row.details</td>
                            <td>
                                <a asp-action="DeleteBatch" asp-route-id="@row.id" class="btn btn-danger btn-sm">Delete</a>
                                <a asp-action="EditBatch" asp-route-id="@row.id" class="btn btn-success btn-sm">Edit</a>
                                <a asp-action="ManageStudent" asp-route-id="@row.id" class="btn btn-warning btn-sm">Manage Student</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#batchTable').DataTable();
        });

        new DataTable('#batchTable', {
                layout: {
                    topStart: {
                        buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                    }
                }
            });
    </script>
</div>