@model StudentManagement.Models.batch
@{
    ViewBag.Title = "Add New Batch";
    Layout = "_AdminLayout";
}


<div>
    <h1 class="text-3xl font-bold mb-4 text-center">
        <span class="border-b-4 border-blue-600">Add New Batch</span>
    </h1>
    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <form asp-action="AddBatch" method="post">
                Enter Batch Name:
                <input type="text" asp-for="name" class="form-control" placeholder="Batch Name" required/>
                <br />

                Enter Teacher Name:
                <input type="text" asp-for="teacher" class="form-control" placeholder="Teacher Name" required />
                <br />

                Enter Other Details:
                <input type="text" asp-for="details" class="form-control" placeholder="Other Details" required />
                <br />

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>