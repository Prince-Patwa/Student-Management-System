@{
    Layout = "_WebsiteLayout";
}

<!-- About Us Hero Section -->
<section class="bg-blue-600 text-white py-16 px-6 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">About Us</h1>
    <p class="max-w-3xl mx-auto text-lg">
        At <span class="font-semibold">Genius Coaching Center</span>, we are committed to providing
        top-notch education, expert guidance, and a supportive environment where every student
        can excel and achieve their dreams.
    </p>
</section>

<!-- Our Story Section -->
<section class="py-16 px-6 bg-gray-50">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
        <!-- Text -->
        <div>
            <h2 class="text-3xl font-bold mb-4 text-gray-800">
                <span class="border-b-4 border-yellow-400">Our Story</span>
            </h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
                Founded with a vision to transform education, Genius Coaching Center has been
                guiding students to academic excellence for over a decade. We believe in
                providing personalized coaching that helps every learner unlock their
                true potential.
            </p>
            <p class="text-gray-600 leading-relaxed">
                With a blend of modern teaching methods, experienced faculty, and a
                student-first approach, we ensure success for board exams, competitive
                entrance exams, and overall career development.
            </p>
        </div>
        <!-- Image -->
        <div class="flex justify-center">
            <img src="https://img.freepik.com/free-vector/students-studying-library_74855-4577.jpg"
                 alt="Our Story" class="rounded-2xl shadow-lg w-full max-w-md">
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="py-16 px-6">
    <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-12 text-gray-800">
            <span class="border-b-4 border-blue-600">Our Mission & Vision</span>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Mission -->
            <div class="bg-white rounded-2xl shadow-md p-8 hover:shadow-lg transition">
                <h3 class="text-2xl font-semibold text-yellow-500 mb-4">Our Mission</h3>
                <p class="text-gray-600 leading-relaxed">
                    To provide quality education, personalized learning experiences,
                    and skill development opportunities that prepare students for
                    academic and professional success.
                </p>
            </div>
            <!-- Vision -->
            <div class="bg-white rounded-2xl shadow-md p-8 hover:shadow-lg transition">
                <h3 class="text-2xl font-semibold text-yellow-500 mb-4">Our Vision</h3>
                <p class="text-gray-600 leading-relaxed">
                    To become a leading coaching institute known for innovation,
                    academic excellence, and nurturing future leaders who make a
                    positive impact on society.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="bg-gray-100 py-16 px-6">
    <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-12 text-gray-800">
            <span class="border-b-4 border-yellow-400">Why Choose Us</span>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h3 class="text-xl font-semibold mb-2 text-blue-600">Expert Faculty</h3>
                <p class="text-gray-600 text-sm">Highly qualified and experienced teachers to guide you at every step.</p>
            </div>
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h3 class="text-xl font-semibold mb-2 text-blue-600">Personalized Learning</h3>
                <p class="text-gray-600 text-sm">Customized study plans to match the learning style of each student.</p>
            </div>
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h3 class="text-xl font-semibold mb-2 text-blue-600">Modern Resources</h3>
                <p class="text-gray-600 text-sm">Smart classrooms, labs, and study materials for effective learning.</p>
            </div>
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h3 class="text-xl font-semibold mb-2 text-blue-600">Results-Oriented</h3>
                <p class="text-gray-600 text-sm">Proven success track with top scores in board & competitive exams.</p>
            </div>
        </div>
    </div>
</section>

<!-- Meet Our Team Section -->
<section class="py-16 px-6">
    <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-12 text-gray-800">
            <span class="border-b-4 border-blue-600">Meet Our Team</span>
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            <!-- Teacher 1 -->
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <img src="https://randomuser.me/api/portraits/men/32.jpg"
                     alt="Faculty 1" class="w-28 h-28 rounded-full mx-auto mb-4 object-cover shadow">
                <h3 class="text-lg font-semibold text-yellow-500">Dr. Rajesh Kumar</h3>
                <p class="text-sm text-gray-500">Mathematics Expert</p>
            </div>
            <!-- Teacher 2 -->
