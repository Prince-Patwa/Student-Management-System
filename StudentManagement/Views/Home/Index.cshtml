<div class="p-4 flex justify-center items-center bg-gray-100">
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition">
        <h1 class="text-center font-bold mb-8 text-4xl">Admin Login</h1>
        <div class="max-w-md bg-white rounded-lg p-6">
            <form method="post" asp-action="AdminLogin">
                <label class="block font-bold">Email address</label>
                <input type="email" asp-for="email" placeholder="Enter your email address" required class="w-full px-4 py-2 border rounded mb-6" />

                <label class="block font-bold">Password</label>
                <input type="password" asp-for="password" placeholder="Enter your password" required class="w-full px-4 py-2 border rounded mb-6" />
                <a asp-action="ForgotPassword" class="text-blue-600 hover:underline text-end">Forgot Password?</a>

                <button class="w-full bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-800 mb-6 text-white">Login</button>
            </form>

            <span class="text-bg-danger">@TempData["error"]</span>
        </div>
    </div>
</div>