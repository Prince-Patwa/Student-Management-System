@{
    Layout = "_WebsiteLayout";
    ViewBag.title = "Student Login Pannel";
}

<div class="p-4 flex justify-center items-center bg-gray-100">
    <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition">
        <h1 class="text-center font-bold mb-8 text-4xl">Student Login</h1>
        <div class="max-w-md bg-white rounded-lg p-6">
            <form method="post" asp-action="StudentLogin">
                <label class="block font-bold">Email address</label>
                <input type="email" name="email" placeholder="Enter your email address" required class="w-full px-4 py-2 border rounded mb-6" />

                <button class="w-full bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-800 mb-6 text-white">Login</button>
            </form>

            <span class="text-bg-danger">@TempData["studentlogin"]</span>
        </div>
    </div>
</div>
