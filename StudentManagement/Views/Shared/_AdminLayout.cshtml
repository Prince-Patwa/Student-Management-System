<!--Tailwind CSS-->

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">

    <link href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" rel="stylesheet" />

    @* font awesome cdn link *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script> 

    @* datatable link for excle download or csv formate download *@
    <link href="https://cdn.datatables.net/buttons/3.2.5/css/buttons.dataTables.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/buttons/3.2.5/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.html5.min.js"></script>
</head>
<body class="flex flex-col min-h-screen">
    <!--Header Start-->
    <header>
        <div class="bg-black p-3 flex flex-col md:flex-row gap-2 justify-between items-center">
            <div class="text-xl font-bold text-white text-center text-sm md:text-base">Admin Panel</div>
            <div class="text-center text-white font-semibold text-sm md:text-base">Genius Coaching Center Student Management Software</div>
            <div>
                <a asp-action="#" class="p-2 bg-white text-black no-underline mx-1 rounded-lg hover:bg-gray-200 transition">Profile</a>
                <a asp-action="Logout" class="p-2 bg-red-500 text-white no-underline rounded-lg hover:bg-red-600 transition">Logout</a>
            </div>
        </div>
    </header>
    <!--Header End-->

    <!-- Toggle Button (only mobile pe dikhana) -->
    <button id="sidebarToggle" class="md:hidden p-2 text-white bg-gray-700 m-2 rounded">
        ☰ Menu
    </button>

    <!--Sidebar Start-->
    <div class="flex-1 flex">
        <div id="sidebar" id="sidebar" class="bg-gray-900 w-1/5 overflow-y-auto fixed md:static -left-[250px] md:left-0 top-0 transition-all duration-300 md:translate-x-0">
                <div class="flex justify-center items-center">
                    <img src="/images/genius.jpg" class="h-[50px] w-[50px] rounded-full my-2" />
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="Index" class="p-2 bg-gray-800 w-full rounded-lg text-lg text-white font-semibold no-underline text-center hover:bg-gray-700"><i class="fa-solid fa-user-tie"></i> Dashboard</a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="NewAdmission" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-user-plus"></i> 
                    New Admission
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="AllStudents" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-users"></i>
                    List All Student
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="NewFeePayment" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-money-bill-wave"></i>
                    New Fee Payment
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="AllFee" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-file-invoice-dollar"></i>
                    All Payment Detail
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                    <a asp-action="FeeCollecionReport" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                        <i class="fa-solid fa-chart-bar"></i>
                        Fee Collection Report
                    </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="ShowAllEnquiry" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-envelope-open-text"></i>
                    View Enquiry
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="AddBatch" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-layer-group"></i>
                    Add Batch
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="BatchList" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-list"></i>
                    Batch List
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="MarkAttedance" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-calendar-check"></i>
                    Mark Attendance
                </a>
                </div>
                <div class="w-full flex justify-center items-center p-2">
                <a asp-action="ViewAttedance" class="p-2 bg-gray-800 w-full rounded-lg text-white no-underline text-center hover:bg-gray-700">
                    <i class="fa-solid fa-eye"></i>
                    View Attendance
                </a>
                </div>
            </div>

        <main class="flex-1 p-6 overflow-x-auto">
            @RenderBody()
        </main>
    </div>
    <!--Sidebar End-->


    <!--Footer Start-->
    <footer class="w-full bg-black text-white text-center font-bold py-2">
        Copyright &copy; Bajrangi Patwa
    </footer>
    <!--Footer Start-->

    <script>
        const toggleBtn = document.getElementById("sidebarToggle");
        const sidebar = document.getElementById("sidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("left-0");
            sidebar.classList.toggle("-left-[250px]");
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @{
        if (TempData["Success"] != null)
        {
            <script>
                    Swal.fire({
                title: "Good job!",
                text: "@TempData["Success"] !",
                icon: "success"
                });
            </script>
        }
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
                $(document).ready(function(){
            let table = new DataTable('#mytable');
        })

        new DataTable('#mytable', {
            layout: {
                topStart: {
                    buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                }
            }
        });
    </script>
</body>
</html>