<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    @* bootstrap css link *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">

    @* datatable link for excle download or csv formate download *@
    <link href="https://cdn.datatables.net/buttons/3.2.5/css/buttons.dataTables.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/buttons/3.2.5/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.html5.min.js"></script>
</head>
<body>
    <div class="flex flex-col md:flex-row min-h-screen">
        <div class="bg-blue-600 text-white w-full md:w-64 flex flex-col p-6">
            <h2 class="text-2xl font-semibold text-center mb-8"><i class="fa-solid fa-gauge"></i> Student Panel</h2>
            <nav class="flex flex-col space-y-3">
                <a asp-action="Index" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-house-user text-red-400"></i> Dashboard</a>
                <a asp-action="ViewAttedance" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-clipboard-user text-yellow-400"></i> Attendance</a>
                <a asp-action="PayDueFee" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-money-check-dollar text-orange-500"></i> Fee Payment</a>
                <a asp-action="FeeReport" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-square-poll-horizontal text-green-600"></i> Fee Report</a>
                <a asp-action="LogoutStudent" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-right-from-bracket text-red-800"></i> Logout</a>
                <a href="#" class="hover:bg-blue-700 px-4 py-2 rounded-md transition"><i class="fa-solid fa-gear"></i> Settings</a>
            </nav>
        </div>
        <div class="flex-1 p-6 bg-gray-100">
            @RenderBody()
        </div>
    </div>

    <script>
                $(document).ready(function(){
            let table = new DataTable('#myTable');
        })

        new DataTable('#myTable', {
            layout: {
                topStart: {
                    buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                }
            }
        });
    </script>
</body>
</html>
